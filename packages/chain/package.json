    "preinstall": "pnpm run generate",
    "lint": "TIMING=1 eslint ./index.ts --fix"
  },
  "devDependencies": {
    "@zenlink-interface/eslint-config": "workspace:*",
    "@zenlink-interface/typescript-config": "workspace:*",
    "eslint": "^8.55.0",
    "typescript": "5.3.3"
  }
}
