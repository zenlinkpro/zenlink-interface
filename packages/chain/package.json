{
  "name": "@zenlink-interface/chain",
  "version": "0.0.0",
  "description": "Zenlink Chain",
  "author": "zenlinkpro",
  "license": "LGPL-2.1-or-later",
  "keywords": [
    "zenlink",
    "chain"
  ],
  "main": "./dist/index.js",
  "source": "./index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
